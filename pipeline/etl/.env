
# --- Core Environment Settings ---
ETL_ENVIRONMENT=dev
ETL_VERSION="1.0"
ETL_ROOT_DIR=/srv/elite-dangerous-dev/pipeline/etl
ETL_DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/elite_dangerous
ETL_USER_AGENT="ED-ETL-Pipeline-v1.0"

# --- Process Control Settings ---

# Nested Download Settings (ETL_DOWNLOADS__<FIELD>)
ETL_DOWNLOADS__RAW_DIR=data/raw
ETL_DOWNLOADS__DESTINATION_DIR=data/downloads
ETL_DOWNLOADS__MANIFEST_DIR=data/manifests
ETL_DOWNLOADS__USER_AGENT="Elite-Dangerous-ETL/1.0"
ETL_DOWNLOADS__TIMEOUT=60
ETL_DOWNLOADS__CHUNK_SIZE=131072

# --- Connection and Network Settings ---

# Nested Network Settings (ETL_NETWORK__<FIELD>)
ETL_NETWORK__MAX_ALLOWED_TIMEOUT=7600
ETL_NETWORK__POOL_MAX_CONNECTIONS=2
ETL_NETWORK__DEFAULT_RETRY_COUNT=1
ETL_NETWORK__CHECKSUM_PRIORITY='["Digest", "ETag", "x-amz-meta-sha256", "x-goog-hash"]'


# --- Pipeline Orchestration Settings ---
# New structure for Orchestration Flags
ETL_ORCHESTRATION__DRY_RUN=false
ETL_ORCHESTRATION__FORCE_REFRESH=false
ETL_ORCHESTRATION__SKIP_VALIDATION=false
ETL_ORCHESTRATION__STRICT_MODE=false
ETL_ORCHESTRATION__TESTING_MODE=True
